---
import "./index.scss";
import Carousel from "./Carousel/index.tsx";
import chairImage1 from "../../assets/sillon-1.png";
import chairImage2 from "../../assets/sillon-2.png";
import chairImage3 from "../../assets/sillon-3.png";

const slides = [
  {
    src: chairImage1.src,
    alt: "",
    width: chairImage1.width,
    height: chairImage1.height,
  },
  {
    src: chairImage2.src,
    alt: "",
    width: chairImage2.width,
    height: chairImage2.height,
  },
  {
    src: chairImage3.src,
    alt: "",
    width: chairImage3.width,
    height: chairImage3.height,
  },
];
---

<section class="chair" id="chair">
  <div class="content">
    <h2 class="content__title">Chair</h2>
    <p class="content__description">
      Curvas y comodidad se unen en el sill√≥n Chair, ofreciendo un ambiente
      relajado y acogedor. Disponible en tela o piel.
    </p>
    <div class="content__colors">
      <span class="color-primary"></span>
      <span class="color-secondary"></span>
      <span class="color-tertiary"></span>
    </div>
    <p class="content__important">+300 Telas y Cueros</p>
    <div class="content__buttons">
      <button class="button button--primary">Agregar al carro</button>
    </div>
  </div>
  <Carousel client:load slides={slides} />
</section>
